<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.preference.DropDownPreference
        android:entries="@array/applicationStartingScreens"
        android:entryValues="@array/applicationStartingScreens"
        android:key="@string/key_app_starting_screen"
        android:summary="Choose the screen to first display when application starts"
        android:title="Application starting screen" />

    <androidx.preference.CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/key_allow_crash_reporting"
        android:summary="@string/preference_summary_crash_reporting"
        android:title="@string/preference_title_crash_reporting" />

    <Preference
        android:key="@string/key_view_licenses"
        android:summary="@string/preference_summary_view_licenses"
        android:title="@string/preference_title_view_licenses" />

</androidx.preference.PreferenceScreen>
