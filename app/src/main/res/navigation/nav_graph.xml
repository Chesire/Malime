<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overview_nav_graph"
    tools:ignore="InvalidNavigation,UnusedNavigation">

    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.chesire.malime.flow.oob.AnalyticsFragment"
        android:label="AnalyticsFragment"
        tools:layout="@layout/fragment_analytics">
        <action
            android:id="@+id/toDetailsFragment"
            app:destination="@id/detailsFragment"
            app:popUpTo="@+id/analyticsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.chesire.malime.flow.login.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/toSyncingFragment"
            app:destination="@id/syncingFragment" />
    </fragment>
    <fragment
        android:id="@+id/syncingFragment"
        android:name="com.chesire.malime.flow.login.syncing.SyncingFragment"
        android:label="SyncingFragment"
        tools:layout="@layout/fragment_syncing">
        <action
            android:id="@+id/toAnimeFragment"
            app:destination="@id/animeFragment"
            app:popUpTo="@+id/detailsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.chesire.malime.flow.series.list.anime.AnimeFragment"
        android:label="AnimeFragment"
        tools:layout="@layout/fragment_series_list">
        <action
            android:id="@+id/toSeriesDetailFragment"
            app:destination="@id/seriesDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/toSearchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/mangaFragment"
        android:name="com.chesire.malime.flow.series.list.manga.MangaFragment"
        android:label="MangaFragment"
        tools:layout="@layout/fragment_series_list">
        <action
            android:id="@+id/toSeriesDetailFragment"
            app:destination="@id/seriesDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/toSearchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/timelineFragment"
        android:name="com.chesire.malime.flow.timeline.TimelineFragment"
        android:label="TimelineFragment"
        tools:layout="@layout/fragment_timeline" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.chesire.malime.flow.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.chesire.malime.flow.series.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/seriesDetailFragment"
        android:name="com.chesire.malime.flow.series.detail.SeriesDetailFragment"
        android:label="SeriesDetailFragment"
        tools:layout="@layout/fragment_series_detail">
        <argument
            android:name="series"
            app:argType="com.chesire.malime.core.models.SeriesModel" />
    </fragment>
    <action
        android:id="@+id/globalToDetailsFragment"
        app:destination="@id/detailsFragment"
        app:popUpTo="@id/detailsFragment"
        app:popUpToInclusive="true" />
</navigation>
