<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overview_nav_graph"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@+id/activityFragment"
        android:name="com.chesire.malime.flow.activity.ActivityFragment"
        android:label="ActivityFragment"
        tools:layout="@layout/fragment_activity" />
    <fragment
        android:id="@+id/animeFragment"
        android:name="com.chesire.malime.flow.series.list.anime.AnimeFragment"
        android:label="AnimeFragment"
        tools:layout="@layout/fragment_anime">
        <action
            android:id="@+id/toSeriesDetailFragment"
            app:destination="@id/seriesDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/toSearchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/mangaFragment"
        android:name="com.chesire.malime.flow.series.list.manga.MangaFragment"
        android:label="MangaFragment"
        tools:layout="@layout/fragment_manga">
        <action
            android:id="@+id/toSeriesDetailFragment"
            app:destination="@id/seriesDetailFragment" />
        <action
            android:id="@+id/toSearchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.chesire.malime.flow.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.chesire.malime.flow.series.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/seriesDetailFragment"
        android:name="com.chesire.malime.flow.series.detail.SeriesDetailFragment"
        android:label="SeriesDetailFragment"
        tools:layout="@layout/fragment_series_detail">
        <argument
            android:name="series"
            app:argType="com.chesire.malime.core.models.SeriesModel" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.chesire.malime.flow.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.chesire.malime.flow.login.LoginActivity"
        android:label="LoginActivity" />
    <action
        android:id="@+id/toGlobalLoginActivity"
        app:destination="@id/loginActivity"
        tools:layout="@layout/activity_login" />
</navigation>
