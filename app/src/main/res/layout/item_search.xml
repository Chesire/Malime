<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_search_card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/item_search_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_search_image"
            style="@style/malitem_image_style" />

        <TextView
            android:id="@+id/item_search_title"
            style="@style/malitem_heading_text_style"
            android:layout_toEndOf="@id/item_search_image" />

        <TextView
            android:id="@+id/item_search_progress"
            style="@style/search_body_text_style"
            android:layout_below="@id/item_search_title"
            android:layout_toEndOf="@id/item_search_image"
            android:layout_toStartOf="@id/search_image_add_button"
            android:maxLines="8" />

        <ImageButton
            android:id="@+id/search_image_add_button"
            style="@style/search_image_add_button_style"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_exposure_plus_1_black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_search_loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.75"
            android:background="#FFFAFAFA"
            android:clickable="false" />

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</android.support.v7.widget.CardView>