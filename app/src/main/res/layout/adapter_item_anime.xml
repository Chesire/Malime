<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/adapterItemAnimeImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/adapterItemAnimeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/adapterItemAnimePlusOne"
        app:layout_constraintEnd_toStartOf="@+id/adapterItemAnimePlusOne"
        app:layout_constraintStart_toEndOf="@id/adapterItemAnimeImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="Anime Series Title" />

    <TextView
        android:id="@+id/adapterItemAnimeProgress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/adapterItemAnimePlusOne"
        app:layout_constraintStart_toEndOf="@id/adapterItemAnimeImage"
        app:layout_constraintTop_toBottomOf="@+id/adapterItemAnimeTitle"
        tools:text="101 / 250" />

    <ImageButton
        android:id="@+id/adapterItemAnimePlusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:src="@drawable/ic_exposure_plus_1_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>
