<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="SeriesProgressTextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">@dimen/full_margin</item>
    </style>

    <style name="SeriesProgressTextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/half_margin</item>
        <item name="android:layout_marginTop">@dimen/full_margin</item>
    </style>

</resources>
