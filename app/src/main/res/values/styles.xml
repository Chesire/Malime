<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="OutlineButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton" />

    <style name="SeriesProgressTextTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/full_margin</item>
        <item name="android:layout_marginEnd">@dimen/full_margin</item>
        <item name="android:layout_marginTop">@dimen/full_margin</item>
    </style>

    <style name="SeriesProgressTextBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/full_margin</item>
        <item name="android:layout_marginEnd">@dimen/full_margin</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
    </style>

    <style name="BottomSheetHeaderTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetHeaderSubtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetHeaderProgress" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:lines">1</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_add_white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:alpha">0.3</item>
        <item name="android:background">@color/darkerGrey</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
